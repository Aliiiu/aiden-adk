# ==============================
# Core Configuration
# ==============================

# Debug logging for ADK (set to "true" to enable)
ADK_DEBUG="false"

# OpenRouter API (get from https://openrouter.ai)
OPENROUTER_API_KEY=""

# Model configuration
LLM_MODEL="openai/gpt-4.1-mini"

# ==============================
# Data Providers
# ==============================

# CoinGecko API (get from https://www.coingecko.com/en/api)
COINGECKO_PRO_API_KEY=""
# Use "demo" for sandbox access or "pro" for production data
COINGECKO_ENVIRONMENT="demo"

# IQ Gateway Configuration
IQ_GATEWAY_URL=""
IQ_GATEWAY_KEY=""

# Google Gemini (get from https://aistudio.google.com/api-keys)
GOOGLE_GENERATIVE_AI_API_KEY=""

# ==============================
# Langfuse Telemetry (Optional)
# Get your API keys from https://cloud.langfuse.com
# ==============================
LANGFUSE_PUBLIC_KEY=""
LANGFUSE_SECRET_KEY=""
LANGFUSE_BASEURL="https://cloud.langfuse.com"

# ==============================
# Telegram Bot Configuration
# Get bot token from @BotFather on Telegram
# ==============================
TELEGRAM_BOT_TOKEN=""
# "polling" or "webhook"
TELEGRAM_MODE="polling"

# ==============================
# API Server
# ==============================
# Enable HTTP API server
API_ENABLED="false"
# HTTP server port
API_PORT="3000"
# Optional logging level (debug, info, warn, error)
LOG_LEVEL=""

# ==============================
# Database Configuration (Required)
# PostgreSQL connection string for persistence (required for API and Telegram bot features)
# ==============================
DATABASE_URL=""
